@page
@model MyRazorApp.Pages.Index
@{
    ViewData["Title"] = "Index";
}

<h1>@ViewData["Title"]</h1>

<div>
    <ul>
        <li>
            <a href="~/">Home</a>
        </li>
        <li>
            <a href="~/About">Sobre</a>
        </li>
        <li>
            <a href="~/Login">Login</a>
        </li>
    </ul>
    <h1>Categorias</h1>
    <table>
        <thead>
            <tr>
                <td>ID</td>
                <td>Title</td>
                <td>Price</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var category in Model.Categories)
            {
                <tr>
                    <td>@category.Id</td>
                    <td>@category.Title</td>
                    <td>@category.Price</td>
                </tr>
            }
        </tbody>
    </table>
</div>